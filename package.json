{
  "name": "mdvs_webpack_boilerpate",
  "version": "1.2.0",
  "private": true,
  "description": "Simple Webpack Boilerplate",
  "scripts": {
    "build": "rm -rf dist && webpack --mode production && git add dist",
    "lint-fix": "stylelint 'src/**/*.scss' --fix && eslint src --fix",
    "postcommit": "git update-index --again",
    "precommit": "lint-staged",
    "start": "webpack-dev-server --mode development",
    "dev": "webpack-dev-server --mode development"
  },
  "lint-staged": {
    "ignore": [
      "**/dist/**/*",
      "**/icomoon/**/*"
    ],
    "linters": {
      "*.scss": [
        "stylelint --fix",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.6",
    "click-outside": "^2.0.2",
    "foundation-sites": "^6.7.5",
    "gsap": "^3.12.2",
    "jquery": "^3.7.0",
    "letteringjs": "^0.7.0",
    "line-height": "^0.3.1",
    "lodash": "^4.17.21",
    "node-contains": "^1.0.0",
    "odometer": "^0.4.8",
    "scrollmagic": "^2.0.8",
    "sharp": "0.29.0",
    "swiper": "^10.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/eslint-parser": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-webpack": "^0.13.3",
    "eslint-plugin-import": "^2.28.0",
    "file-loader": "^6.2.0",
    "fontface-loader": "^0.0.8",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "imports-loader": "^4.0.1",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "pug": "^3.0.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.64.2",
    "sass-loader": "^13.3.2",
    "sass-resources-loader": "^2.2.5",
    "simple-pug-loader": "^0.2.1",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.0.1",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=14.21"
  }
}
