{
  "name": "mdvs_webpack_boilerpate",
  "version": "1.2.0",
  "description": "Simple Webpack Boilerplate",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "rm -rf dist && webpack --mode production && git add dist",
    "lint-fix": "stylelint 'src/**/*.scss' --fix && eslint src --fix",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again"
  },
  "engines": {
    "node": ">=12.18.4"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.6",
    "click-outside": "^2.0.2",
    "copy-webpack-plugin": "^6.2.1",
    "dom4": "^2.1.4",
    "foundation-sites": "^6.6.3",
    "gsap": "^3.5.1",
    "jquery": "^3.3.1",
    "letteringjs": "^0.7.0",
    "line-height": "^0.3.1",
    "lodash": "^4.17.11",
    "node-contains": "^1.0.0",
    "odometer": "^0.4.8",
    "scrollmagic": "^2.0.6",
    "swiper": "^6.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^4.3.0",
    "css-mqpacker": "^7.0.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-import": "^2.22.0",
    "favicons-webpack-plugin": "^4.2.0",
    "file-loader": "^6.1.0",
    "fontface-loader": "^0.0.8",
    "html-loader": "^1.3.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "imports-loader": "^1.1.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.11.2",
    "node-sass": "^4.14.1",
    "postcss-loader": "^4.0.2",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^10.0.2",
    "sass-resources-loader": "^2.1.0",
    "sort-css-media-queries": "^1.5.0",
    "style-loader": "^1.2.1",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-scss": "^3.18.0",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-glsl-loader": "^1.0.1"
  },
  "lint-staged": {
    "linters": {
      "*.scss": [
        "stylelint --fix",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**/*",
      "**/icomoon/**/*"
    ]
  }
}
